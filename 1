function getRandomName(namesArray) {
  var nameIndex = Math.floor(Math.random() * namesArray.length);
  return namesArray[nameIndex];
}

function generateName(block, namesArray) {
  const nameDisplay = document.getElementById(block + "NameDisplay");
  nameDisplay.textContent = getRandomName(namesArray);
}

function generateAmericanName() {
  generateName("american", AmericanNames);
}

function generateIndianName() {
  generateName("indian", IndianNames);
}
