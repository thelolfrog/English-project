        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
           font-family: 'Aldrich', sans-serif;
			background-color: lightblue;
        }

        .interactive-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border: 1px solid black;
            border-radius: 10px;
            width: 60%;
            min-height: 300px;
            background-color: #fff;
        }

        .interactive-box * {
            margin-bottom: 20px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: darkseagreen;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: green;
        }
